@import "kouto-swiss";
meyer-reset();
box-sizing-reset();
font_sans_serif ='Lucida Grande', 'Verdana', 'Ubuntu', 'Arial', 'sans-serif';
font_monospace ='Monaco', 'Consolas', 'Ubuntu Mono', 'monospace';

.cf {
  clearfix();
}
html, body {
  height: 100%;
}
body {
  background: #fff;
  font-family: font_sans_serif;
  font-size: 100%;
  line-height: 1;
  min-width: 800px;
}
#content-wrapper {
  display: table;
  width: 100%;
  height: 100%;
  overflow: hidden;

  #content {
    display: table-row;
    overflow: hidden;
  }
}
@import "documents-sidebar.styl"
@import "editor.styl"
